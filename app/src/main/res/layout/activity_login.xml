<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/raw_1499917357"
    android:orientation="vertical"
    tools:context="com.bwie.voovapp.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">
        <ImageView
            android:id="@+id/login_back"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/raw_1500023215"
            android:layout_width="40dp"
            android:layout_height="25dp" />
        <com.bwie.voovapp.coustom.RoundImageView
            android:id="@+id/roundImage_two_border"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            imagecontrol:border_inside_color="#fff7f2e9"
            imagecontrol:border_outside_color="#ffd5d1c8"
            imagecontrol:border_thickness="2dp"
            android:src="@mipmap/logoquan15047886169"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <Button
            android:id="@+id/weixin_login"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/weixin_shape"
            android:drawableLeft="@mipmap/weixin"
            android:text="微信登录"
            android:textColor="#fff"
            android:textSize="18dp" />
        <Button
            android:id="@+id/qq_login"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_shape"
            android:drawableLeft="@mipmap/qq"
            android:text="QQ登录"
            android:textColor="#fff"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/qita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="其他登录方式"
            android:textColor="#ffff"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>
